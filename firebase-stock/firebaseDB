import 'package:cloud_firestore/cloud_firestore.dart';

class Produto {
  String nome;
  int quantidade;

  Produto(this.nome, this.quantidade);

  Map<String, dynamic> toMap() {
    return {
      'nome': nome,
      'quantidade': quantidade,
    };
  }

  static Produto fromMap(Map<String, dynamic> map) {
    if (map == null) return null;

    return Produto(
      map['nome'],
      map['quantidade'],
    );
  }
}

class EstoqueFirebase {
  final CollectionReference _produtosCollection =
      FirebaseFirestore.instance.collection('produtos');

  Future<void> adicionarProduto(Produto produto) async {
    await _produtosCollection.add(produto.toMap());
  }

  Future<void> atualizarProduto(String id, Produto produto) async {
    await _produtosCollection.doc(id).update(produto.toMap());
  }

  Future<void> removerProduto(String id) async {
    await _produtosCollection.doc(id).delete();
  }

  Stream<List<Produto>> get produtos {
    return _produtosCollection.snapshots().map((snapshot) => snapshot.docs
        .map((document) => Produto.fromMap(document.data()))
        .toList());
  }
}
